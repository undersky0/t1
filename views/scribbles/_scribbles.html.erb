<% if scribbles_streams.empty? %>
  <h3> no scribbles yet </h3>
<% else %>
  <% scribbles_streams.each do |scribble| %>
  <div class="scribblebody" id="<%=scribble.scribble_id %>"> 
    <div class="scribbleimg"><%=image_tag 'default_avatar.png' %></div>
    <div class="scribbletext">
      <blockquote>
        <p><%= scribble.post %></p>
        <small><%= scribble.posted_by %></small>
      </blockquote>
      <div class="scribbletime">
        <label class="label">posted <%= TimelineBeautify.beauty_time(scribble.created_at) %></label>
        <label class="label"><%= scribble.posted_comments.count %> comments</label>
        <a href="" id="<%= scribble.id %>" name="up" class="votes"><i class="icon-thumbs-up"></i><%= scribble.ups %> likes</a>
        <a href=""  id="<%= scribble.id %>"  name="down" class="votes"><i class="icon-thumbs-down"></i><%= scribble.downs %> dislikes</a>
      </div>
    </div>
  <%= render :partial=>"scribble_comments/postedcomments",:locals=>{:scribble=>scribble} %>
  <%= render :partial=>"scribble_comments/newcomment",:locals=>{:scribble=>scribble} %>
  </div>
  <% end %>
<% end %>

