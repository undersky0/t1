<%= form_for(@user_session,:html => { :class => "sb-login-form"}) do |f| %>
<p class="field">
  <%= f.text_field :email,:placeholder=>"Email" %>
  <i class="icon-user icon-large"></i>
</p>
<p class="field">
  <i class="icon-lock icon-large"></i>
  <%= f.password_field :password,:placeholder=>"Password" %>
</p>
<p class="field">
<%= f.check_box :remember_me %><%= f.label :remember_me %>
</p>
<br />
<p class="submit">
  <button type="submit" name="submit"><i class="icon-arrow-right icon-large"></i></button>
</p>
<div class="social_network_authorize">
  <h3>Sign in with</h3>
  <% ["twitter","facebook", "linkedin","open_id"].each do |provider| %>
    <% if provider !="open_id" %>
      <%= link_to image_tag("auth/#{provider}_32.png"), "/auth/#{provider}" %>
    <% else %>
      <%= link_to image_tag("auth/#{provider}_32.png"), "/auth/#{provider}/openid_url=https://www.google.com/accounts/o8/id" %>
    <% end %>
  <% end %>
</div>
<% end %>